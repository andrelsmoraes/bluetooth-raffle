<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="org.andrelsmoraes.bluetoothraffle.utils.UiStateEvent" />

        <variable
            name="viewModel"
            type="org.andrelsmoraes.bluetoothraffle.ui.DevicesViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/layoutEmptyStateDevices"
                layout="@layout/layout_devices_empty_state"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:visibleOrGone="@{viewModel.uiState == UiStateEvent.Empty.INSTANCE}"
                bind:viewModel="@{viewModel}" />

            <include
                android:id="@+id/layoutSearchingDevices"
                layout="@layout/layout_devices_searching"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:visibleOrGone="@{viewModel.uiState == UiStateEvent.Loading.INSTANCE}"
                bind:viewModel="@{viewModel}" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerDevices"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:visibleOrGone="@{viewModel.uiState == UiStateEvent.Success.INSTANCE}" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabRaffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/design_fab_size_normal"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="@{() -> viewModel.raffle()}"
            android:text="@string/button_raffle"
            android:textColor="#f0f0f0"
            android:visibility="invisible"
            app:backgroundTint="@color/colorPrimary"
            app:icon="@drawable/ic_card_giftcard_24dp"
            app:iconTint="#f0f0f0"
            app:layout_anchor="@id/recyclerDevices"
            app:layout_anchorGravity="bottom|right|end"
            app:layout_behavior=".ui.misc.ShrinkButtonOnScrollBehavior"
            app:shapeAppearanceOverlay="@style/FabOverlay"
            app:visibleOrGone="@{viewModel.uiState == UiStateEvent.Success.INSTANCE}" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>